<% provide(:title, "Edit password") %>

 <div class="row">
   <div class="col-md-6 col-md-offset-3">
    <h8>Update your password</h8>
    <%= form_for(:password_resets) do |f| %>

      <%= f.label :current_password, "CURRENT PASSWORD", class: "form_control" %>
      <%= f.password_field :password, :required => true, class: "field_control" %>

      <%= f.label :new_password, "NEW PASSWORD", class: "form_control" %>
      <%= f.password_field :password, class: "field_control" %>

      <%= f.label :password_confirmation, "NEW PASSWORD CONFIRMATION", class: "form_control" %>
      <%= f.password_field :password_confirmation, class: "field_control" %>

       <%= f.submit "Save changes" %>
     <% end %>
    <p>Want to change your name or email? <%= link_to "Update your profile", edit_user_path(current_user) %></p>
   </div>
 </div> 