<% provide(:title, 'Reset Password') %>

 <div class="row">
   <div class="col-md-6 col-md-offset-1,5">
 
    <%= form_for(:password_reset) do |f| %>

      <%= f.label :email, "EMAIL", class: "form_control" %>
      <%= f.text_field :email, class: "field_control" %>

      <br /> <br />
      <button type="submit" class="btn btn-default">Reset Password</button>
    <% end %>
  </div>
</div>