<nav class="pagination">
  <div class="project-list">
    <% @projects.each do |project| %>  
    <div class="project-name"> 
      <%= link_to new_project_task_path(project.id), style: 'color:#000' do %>
      <span data-tooltip aria-haspopup="true" title="add new task">
        <%= project.name %>
      </span>
      <% end %>
    </div>
    <div class="task-list">
      <% project.tasks.each do |task| %>  
      <p class="task-item"> 
        <%= link_to new_project_task_pomodoro_path(project.id, task.id), style: 'color:#000' do %>
        <% task.pomodoros.where(success: true).count.times do %>
        <%= image_tag("tomato_middle.png") %>
        <% end %>
        <% task.pomodoros.where(success: false).count.times do %>
        <%= image_tag("tomato_middle_spoiled.png") %>
        <% end %>
        <span data-tooltip aria-haspopup="true" title="add new pomodoro">
          <%= task.name %> 
        </span>
      </p>
      <% end %> 
      <% end %>
    </div> 
    <% end %> 
  </div>
</div>
