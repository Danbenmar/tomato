<% provide(:title, "Edit user") %>
<div class="col-sm-6 blog-main">

 <div class="row">
  <div class="col-md-5 col-md-offset-2 blog-sidebar">
   <div class="sidebar-module">
    <h8>Update your profile</h8>
  
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    
      <%= f.label :name, "NAME", class: "form_control" %>
      <%= f.text_field :name, class: "field_control" %>

      <%= f.label :email, "EMAIL", class: "form_control" %>
      <%= f.email_field :email, class: "field_control" %>

      <%= f.label :password, "PASSWORD", class: "form_control" %>
      <%= f.password_field :password, :placeholder => "confirm changes", class: "field_control" %>

      <br /> <br />
      <button type="submit" class="btn btn-default">Save changes</button>

     <% end %>
     <p>Want to change your password? <%= link_to "Change Password", password_edit_path %></p>
   </div>
 </div> 
</div>
</div>