<% provide(:title, "Edit password") %>
<div class="col-sm-6 blog-main">

 <div class="row">
  <div class="col-md-5 col-md-offset-2 blog-sidebar">
   <div class="sidebar-module">
    <h8>Update your password</h8>
    <%= form_tag(password_update_path(@user.id), method: 'post') do %>
    <%= render 'shared/error_messages' %>

      <%= label_tag :current_password, "CURRENT PASSWORD", class: "form_control" %>
      <%= password_field_tag :current_password, nil, class: "field_control"  %>

      <%= label_tag :new_password, "NEW PASSWORD", class: "form_control" %>
      <%= password_field_tag :new_password, nil, class: "field_control"  %>

      <%= label_tag :new_password_confirmation, "NEW PASSWORD CONFIRMATION", class: "form_control" %>
      <%= password_field_tag :new_password_confirmation, nil, class: "field_control" %>

      <br /> <br />
      <button type="submit" class="btn btn-default">Save changes</button>

     <% end %>
    <p>Want to change your name or email? <%= link_to "Update your profile", edit_user_path(current_user) %></p>
   </div>
 </div> 
</div>
</div>