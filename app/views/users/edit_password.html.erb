<% provide(:title, "Edit password") %>
 <h1>Update your password</h1>

 <div class="row">
   <div class="col-md-6 col-md-offset-3">
    <%= form_tag(password_update_path(@user.id), method: 'post') do %>
    <%= render 'shared/error_messages' %>

      <%= label_tag :current_password %>
      <%= password_field_tag :current_password %>

      <%= label_tag :new_password %>
      <%= password_field_tag :new_password %>

      <%= label_tag :new_password_confirmation %>
      <%= password_field_tag :new_password_confirmation %>

      <br /> <br />

       <%= submit_tag "Save changes" %>
     <% end %>
    <p>Want to change your name or email? <%= link_to "Update your profile", edit_user_path(current_user) %></p>
   </div>
 </div> 